@model TransportCompany.Models.Car
@{
    ViewBag.Title = "Cars";
}

<h2>@ViewBag.Title</h2>

@foreach (TransportCompany.Models.Car car in ViewBag.Cars)
{
    <div class="panel-body">
        @Html.LabelFor(m => m.RegistrationNr)
        <br />
        <p>@car.RegistrationNr</p>
        @Html.LabelFor(m => m.Model)
        <br />
        <p>@car.Model</p>

        @using (Html.BeginForm(actionName: "Details", controllerName: "Car", method: FormMethod.Get,
            routeValues: new { regNr = car.RegistrationNr }))
        {
            <button class="btn btn-primary">Details</button>
        }
    </div>
}

