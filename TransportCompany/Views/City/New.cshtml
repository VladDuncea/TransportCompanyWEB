@model TransportCompany.Models.City
@{
    ViewBag.Title = "Create";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm(actionName: "New", controllerName: "City", method: FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name, labelText: "City name:")
        @Html.TextBoxFor(m => m.Name, null, new { placeholder = "Type in the name of the city", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Latitude, "Latitude:")
        @Html.TextBoxFor(m => m.Latitude, null, new { placeholder = "Type in the latitude", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Latitude, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Longitude, "Longitude:")
        @Html.TextBoxFor(m => m.Longitude, null, new { placeholder = "Type in the longitude", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Longitude, "", new { @class = "text-danger" })
    </div>

    <button class="btn btn-primary" type="submit">Add</button>
}

<br />

@using (Html.BeginForm(actionName: "Index", controllerName: "City", method: FormMethod.Get))
{
    <button type="submit" class="btn btn-danger">Back</button>
}
