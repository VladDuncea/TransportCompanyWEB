@model TransportCompany.Models.Package
@{
    ViewBag.Title = "Packages";
}

<h2>@ViewBag.Title</h2>

<br />

@using (Html.BeginForm(actionName: "New", controllerName: "Package", method: FormMethod.Get))
{
    <button class="btn btn-primary">Add a package</button>
}
<br />

<table class="table">
    <thead>
    <th>Package ID</th>
    <th>City of destination</th>
    <th>Volume</th>
    <th>Weight</th>
    <th>Details</th>
    </thead>

    <tbody>
        @foreach (TransportCompany.Models.Package package in ViewBag.Packages)
        {
            <tr>
                <td>@package.PackageId</td>
                <td>@package.ToCity.Name</td>
                <td>@package.Volume</td>
                <td>@package.Weight</td>
                <td>@Html.ActionLink("View details", "Details", new { id = package.PackageId })</td>
            </tr>
        }
    </tbody>
</table>